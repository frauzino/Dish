<div id="newsletter-signup-form">
  <%= simple_form_for(newsletter_target) do |f| %>

    <div class="form-inputs">
      <%= f.input :email, label: false, placeholder: 'Email' %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, 'Sign me up', class: "btn button-primary newsletter-form-submit" %>
    </div>
  <% end %>
</div>
